# ============================================
# Application Settings
# ============================================

# APP_ENV: 実行環境を指定 (local / dev / test / prod)
APP_ENV=local

# APP_DEBUG: デバッグ出力を有効化 (true / false)
APP_DEBUG=true


# ============================================
# Database Settings (PDO / MySQL)
# ============================================

# データベース接続ホスト
DB_HOST=127.0.0.1

# データベース接続ポート
DB_PORT=3306

# データベース名
DB_DATABASE=change_me

# DBユーザー
DB_USERNAME=change_me

# パスワード
DB_PASSWORD=change_me

# DSN のタイプを指定 (mysql 以外を使う場合に変更)
DB_CONNECTION=mysql

# PDOオプション (必要に応じて)
# 例: persistent = true なら永続接続
DB_PERSISTENT=false


# ============================================
# Logging Settings (Monolog)
# ============================================

# ログファイルの出力ディレクトリ
# (プロジェクトルートからの相対パス)
LOG_PATH=logs/app.log

# ログレベル: debug / info / notice / warning / error / critical / alert / emergency
LOG_LEVEL=debug


# ============================================
# Other
# ============================================

# Timezone（アプリ全体で使用）
APP_TIMEZONE=Asia/Tokyo
